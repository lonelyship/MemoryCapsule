<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:arc="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.lonelyship.ArcMenu.RayMenu
            android:id="@+id/ray_menu"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

        <com.lonelyship.ArcMenu.ArcMenu
            android:id="@+id/arc_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.lonelyship.ArcMenu.ArcMenu
            android:id="@+id/arc_menu_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            arc:arcFromDegrees="@dimen/menuFromDegrees"
            arc:arcToDegrees="@dimen/menuToDegrees"
            arc:arcChildSize="@dimen/menuChildSize"
            android:layout_gravity="right" />

    </LinearLayout>
</ScrollView><!-- From: file:/Users/lonelyship/memorycapsule/app/src/main/res/layout/arc_menu_activity.xml -->